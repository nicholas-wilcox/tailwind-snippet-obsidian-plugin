{
	"name": "obsidian-sample-plugin",
	"version": "0.2.2",
	"description": "This is an Obsidian plugin for using TailwindCSS utility classes",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [ "Obsidian", "TailwindCSS", "PostCSS" ],
	"author": "Nicholas Wilcox <nwilcox@linicks.dev>",
	"repository": {
		"type": "git",
		"url": "https://github.com/nicholas-wilcox/unofficial-tailwindcss-obsidian-plugin.git"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@types/postcss-prefix-selector": "^1.15.0",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"autoprefixer": "^10.4.14",
		"postcss": "^8.4.24",
		"postcss-prefix-selector": "^1.16.0",
		"tailwindcss": "^3.3.2"
	}
}
